#:import rgb utils.color_utils.rgb
#:import ConfirmPopup widgets.confirm_popup.ConfirmPopup

<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: rgb(240, 240, 240)
            Rectangle:
                pos: self.pos
                size: self.size

        # ヘッダー部分
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: dp(15)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: rgb(33, 33, 33)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Discord Presence Manager"
                color: rgb(255, 255, 255)
                font_size: dp(18)
                size_hint_x: 1
                halign: 'left'
                text_size: self.size
                valign: 'center'

        # メインコンテンツ
        BoxLayout:
            orientation: "vertical"
            padding: dp(15)
            spacing: dp(10)

            # アプリケーション選択部分
            BoxLayout:
                orientation: "vertical"
                spacing: dp(8)

                Label:
                    text: "アプリケーション"
                    color: rgb(33, 33, 33)
                    size_hint_y: None
                    height: dp(30)
                    halign: 'left'
                    text_size: self.size
                    valign: 'bottom'

                Spinner:
                    id: main_spinner
                    text: root.selected_main_category_name
                    values: root.main_category_names
                    size_hint_y: None
                    height: dp(45)
                    background_normal: ''
                    background_color: rgb(255, 255, 255)
                    color: rgb(33, 33, 33)
                    on_text:
                        root.selected_client_id = root.main_categories[self.text]
                        root.selected_main_category_name = self.text
                        root.selected_sub_category = ""
                        root.update_sub_categories(self.text)

                Label:
                    text: "ステータス"
                    color: rgb(33, 33, 33)
                    size_hint_y: None
                    height: dp(30)
                    halign: 'left'
                    text_size: self.size
                    valign: 'bottom'

                Spinner:
                    id: sub_spinner
                    text: root.selected_sub_category
                    values: root.sub_category_contents
                    size_hint_y: None
                    height: dp(45)
                    background_normal: ''
                    background_color: rgb(255, 255, 255)
                    color: rgb(33, 33, 33)
                    on_text:
                        root.selected_sub_category = self.text

            Widget:
                size_hint_y: 1

            # 操作ボタン群
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: dp(100)
                spacing: dp(10)

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: dp(45)
                    spacing: dp(10)

                    Button:
                        text: "Discordアプリ管理"
                        background_normal: ''
                        background_color: rgb(66, 66, 66)
                        color: rgb(255, 255, 255)
                        on_press: root.go_to_discord_manager()

                    Button:
                        text: "サブカテゴリの管理"
                        background_normal: ''
                        background_color: rgb(66, 66, 66)
                        color: rgb(255, 255, 255)
                        on_press: root.go_to_subcategory_manager()

                Button:
                    text: "開始" if not root.is_running else "終了"
                    size_hint_y: None
                    height: dp(45)
                    background_normal: ''
                    background_color: rgb(76, 175, 80) if not root.is_running else rgb(244, 122, 122)
                    color: rgb(255, 255, 255)
                    on_press: root.on_confirm()
