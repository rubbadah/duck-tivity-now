<DiscordApplicationManagerScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        RecycleView:
            id: rv
            viewclass: 'DiscordApplicationItem'
            RecycleBoxLayout:
                default_size: None, dp(60)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

            TextInput:
                id: client_id_input
                hint_text: "クライアントIDを入力"
                text: root.new_client_id
                on_text: root.new_client_id = self.text
                on_focus: if not self.focus: root.fetch_application_name()

            Label:
                id: application_name_label
                text: root.new_application_name
                size_hint_x: 0.6

            Button:
                text: "追加"
                on_press: root.add_application()

        Button:
            text: "戻る"
            size_hint_y: None
            height: dp(50)
            on_press: root.go_back()

<DiscordApplicationItem>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(60)
    spacing: dp(10)

    Label:
        text: root.client_id
        size_hint_x: 0.4

    Label:
        text: root.name
        size_hint_x: 0.4

    Button:
        text: "削除"
        size_hint_x: 0.2
        on_press: root.delete_application()